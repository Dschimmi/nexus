# Nexus Environment Configuration Example

#-- APPLICATION ENVIRONMENT
# Set to "development" for local work, "production" for live server
APP_ENV=development
# APP_ENV=production
    
# App Identity
APP_NAME=AppName
APP_SECRET=ChangeMeToSomethingRandomAndLong123!

# --- ADMIN ACCESS (v0.7.0) ---
ADMIN_USER=admin
ADMIN_EMAIL=admin@localhost
# Hash f체r das Passwort "admin" (BCrypt)
ADMIN_PASSWORD_HASH='$2y$10$qSJJ14HUg0xMx5yQwKvC5uxcOU8gMl3BP8DHFDGr8eQNm/.AnJn6K'

# --- MODULE SETTINGS ---
# Speicherort f체r die Checkbox-Konfiguration
MODULE_CONFIG_PATH=../config/modules.json

# Session Security (Seconds)
SESSION_LIFETIME=1800
SESSION_ABSOLUTE_LIFETIME=43200

# Rate Limiting Konfiguration (Ticket 34)
# Maximale fehlgeschlagene Login-Versuche pro Z채hlfenster.
LOGIN_MAX_ATTEMPTS=5

# Dauer der Blockade in Sekunden nach Erreichen der Max Attempts. (5 Minuten)
LOGIN_LOCKOUT_TIME=300

# Zeitfenster in Sekunden, in dem Versuche gez채hlt werden. (1 Stunde)
LOGIN_ATTEMPT_WINDOW=3600

#Database (Optional, for modules like UserManagement)
DB_DSN=mysql:host=localhost;dbname=nexus;charset=utf8mb4
DB_USER=root
DB_PASSWORD=

# Content Security Policy (CSP) (Ticket 34)
# Definiert die CSP-Regel. CSP_NONCE wird vom Kernel automatisch ersetzt.
# WICHTIG: Erlaubt nur eigene Quellen und Inline-Scripts/Styles mit Nonce.
# default-src 'self'; style-src 'self' 'nonce-CSP_NONCE'; script-src 'self' 'nonce-CSP_NONCE'
CSP_POLICY="default-src 'self'; style-src 'self' 'nonce-CSP_NONCE'; script-src 'self' 'nonce-CSP_NONCE'"

  