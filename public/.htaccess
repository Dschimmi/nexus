    
<IfModule mod_rewrite.c>
    RewriteEngine On

	# Leite Anfragen NICHT weiter, wenn sie eine existierende Datei oder ein Verzeichnis sind
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
	
	# Leite Anfragen auch NICHT weiter, wenn sie auf eine typische Asset-Endung lauten
    RewriteCond %{REQUEST_URI} !\.(ico|css|js|gif|jpg|jpeg|png)$ [NC]
    
	# Leite alles andere auf die index.php um
    RewriteRule . index.php [L]
</IfModule>

# ----------------------------------------------------------------------
# OPCACHE FALLBACK (Shared Hosting)
# ----------------------------------------------------------------------
# Versucht, Opcache-Einstellungen f√ºr Shared-Hosting zu optimieren.
# Hinweis: opcache.preload kann hier nicht gesetzt werden (PHP_INI_SYSTEM).

<IfModule mod_php.c>
    php_value opcache.enable 1
    php_value opcache.memory_consumption 128
    php_value opcache.interned_strings_buffer 8
    php_value opcache.max_accelerated_files 10000
    php_value opcache.revalidate_freq 2
</IfModule>

