{#
    Statische Kontaktseite.
    Zeigt Kontaktmöglichkeiten an.
#}
{% extends 'base.html.twig' %}

{% block title %}{{ 'contact.title'|trans }} – {{ parent() }}{% endblock %}
{% block description %}{{ 'contact.intro'|trans }} – {{ 'brand.name'|trans }}{% endblock %}

{% block content %}
<section class="card">
    <h1 class="u-mb-4">{{ 'contact.title'|trans }}</h1>
    
    <div>
        {# Intro-Text mit leicht vergrößerter Schrift (Inline-Style für spezifischen Tweak behalten) #}
        <p class="u-mb-4 u-text-muted" style="font-size: 1.1rem;">
            {{ 'contact.intro'|trans }}
        </p>

        <div class="grid grid--cols-3 u-mb-0">
            {# E-Mail #}
            <div>
                {# Kein text-gold, Standard h3 für Kontrast #}
                <h3 class="u-mb-2">{{ 'contact.email'|trans }}</h3>
                <p>
                    <a href="mailto:info@exelor.de">info@exelor.de</a>
                </p>
            </div>

            {# Telefon #}
            <div>
                <h3 class="u-mb-2">{{ 'contact.phone'|trans }}</h3>
                <p>
                    +49 (0) 123 44 55 66<br>
                    {# font-small durch semantisches <small> ersetzt #}
                    <small class="u-text-muted">(Mo-Fr, 9-17 Uhr)</small>
                </p>
            </div>

            {# Anschrift #}
            <div>
                <h3 class="u-mb-2">{{ 'contact.address'|trans }}</h3>
                <p>
                    Max Mustermann<br>
                    Musterstraße 1<br>
                    12345 Musterstadt
                </p>
            </div>
        </div>
    </div>
</section>
{% endblock %}