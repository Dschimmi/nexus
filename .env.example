# Nexus Environment Configuration Example

#-- APPLICATION ENVIRONMENT
# Set to "development" for local work, "production" for live server
APP_ENV=development
# APP_ENV=production
    
# App Identity
APP_NAME=AppName
APP_SECRET=ChangeMeToSomethingRandomAndLong123!

# --- ADMIN ACCESS (v0.7.0) ---
ADMIN_USER=admin
ADMIN_EMAIL=admin@localhost
# Hash für das Passwort "admin" (BCrypt)
ADMIN_PASSWORD_HASH='$2y$10$qSJJ14HUg0xMx5yQwKvC5uxcOU8gMl3BP8DHFDGr8eQNm/.AnJn6K'

# --- MODULE SETTINGS ---
# Speicherort für die Checkbox-Konfiguration
MODULE_CONFIG_PATH=../config/modules.json

# Session Security (Seconds)
SESSION_LIFETIME=1800
SESSION_ABSOLUTE_LIFETIME=43200

#Database (Optional, for modules like UserManagement)
DB_DSN=mysql:host=localhost;dbname=nexus;charset=utf8mb4
DB_USER=root
DB_PASSWORD=

  