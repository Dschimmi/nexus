<?xml version="1.0" encoding="UTF-8"?>
<!-- Dies ist die zentrale Konfigurationsdatei fÃ¼r PHPUnit -->
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
    bootstrap="vendor/autoload.php"
    colors="true"
>
    <testsuites>
        <!-- Definiert eine "Test-Suite" namens "App". -->
        <testsuite name="App">
            <!-- Sagt PHPUnit, es soll in diesem Ordner nach Testdateien suchen. -->
            <directory>tests</directory>
        </testsuite>
    </testsuites>
</phpunit>